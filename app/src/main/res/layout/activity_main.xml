<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="229dp"
        android:layout_marginBottom="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_banner" />

    <ImageView
        android:id="@+id/bg_white"
        android:layout_width="wrap_content"
        android:layout_height="340dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_square_white" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/textSelamatDatang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_light"
        android:text="Selamat Datang,"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.292"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white" />

    <TextView
        android:id="@+id/textMaungapain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Mau ngapain hari ini?"
        android:textColor="#35B6BE"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white" />

    <TextView
        android:id="@+id/textNamaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Rizal Syaiful"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white" />

    <TextView
        android:id="@+id/textSaldoUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Rp.150.000"
        android:textColor="#7355B0"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white" />

    <TextView
        android:id="@+id/textLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Rawalumbu,Bekasi"
        android:textColor="#7355B0"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/placeholder"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white" />

    <Button
        android:id="@+id/button_topUp"
        android:layout_width="95dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/topup"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNotif"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ngeprint"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/icon_ngeprint"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:layout_constraintVertical_bias="0.470" />

    <Button
        android:id="@+id/btn_motokopi"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:background="@drawable/icon_motokopi"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:layout_constraintVertical_bias="0.470" />

    <Button
        android:id="@+id/btn_pringrafis"
                android:layout_width="100dp"
        android:layout_height="105dp"
        android:background="@drawable/icon_prinin_grafis"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:layout_constraintVertical_bias="0.470" />

    <Button
        android:id="@+id/btn_jastik"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:background="@drawable/icon_jastik"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:layout_constraintVertical_bias="0.950" />


    <Button
        android:id="@+id/btn_burning"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:background="@drawable/icon_burning"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:layout_constraintVertical_bias="0.950" />

    <Button
        android:id="@+id/btn_nebeng"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/icon_nebeng"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:layout_constraintVertical_bias="0.950" />


    <ImageView
        android:id="@+id/wallet"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:srcCompat="@drawable/wallet" />

    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/bg_white"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toStartOf="@+id/bg_white"
        app:layout_constraintTop_toTopOf="@+id/bg_white"
        app:srcCompat="@drawable/placeholder" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="1010dp"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/navbar"
        app:layout_constraintEnd_toEndOf="@id/navbar"
        app:layout_constraintTop_toTopOf="@id/bg_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/discount__1_"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Rekomendasi Untuk Anda"
                    android:textColor="#F20D9D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.042"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="@+id/imageView5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/bg_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/promo"
                        android:layout_width="400dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="-20dp"
                        app:layout_constraintEnd_toEndOf="@+id/bg_white"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintStart_toStartOf="@+id/bg_white"
                        app:layout_constraintTop_toBottomOf="@+id/bg_white"
                        app:srcCompat="@drawable/promo3" />


                    <ImageView
                        android:id="@+id/promo_2"
                        android:layout_width="320dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="@+id/bg_white"
                        app:layout_constraintHorizontal_bias="0.3"
                        app:layout_constraintStart_toStartOf="@+id/bg_white"
                        app:layout_constraintTop_toBottomOf="@+id/bg_white"
                        app:srcCompat="@drawable/promo4" />


                </LinearLayout>
            </HorizontalScrollView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icon_orderlagi"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shopping_cart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Order Lagi"
                    android:textColor="#F20D9D"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.042"
                    app:layout_constraintStart_toEndOf="@+id/icon_orderlagi"
                    app:layout_constraintTop_toTopOf="@+id/icon_orderlagi" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="0dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/recent_1"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/recent_1" />

                    <ImageView
                        android:id="@+id/recent_2"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/reccent_2" />

                    <ImageView
                        android:id="@+id/recent_3"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/recent_1" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

